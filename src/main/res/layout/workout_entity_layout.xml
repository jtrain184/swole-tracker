<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/workout_entity_layout">

    <TextView
        android:id="@+id/workoutNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name:     " />

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/workoutNameLabel"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/durationNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/workoutNameLabel"
        android:layout_below="@+id/repsNameLabel"
        android:text="Duration:     " />

    <TextView
        android:id="@+id/weightNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutNameLabel"
        android:layout_toEndOf="@+id/workout_name"
        android:text="Weight:     " />

    <TextView
        android:id="@+id/repsNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/workout_name"
        android:text="Reps:     " />

    <TextView
        android:id="@+id/workout_duration"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutNameLabel"
        android:layout_toEndOf="@+id/durationNameLabel"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/workout_reps"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/repsNameLabel"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/workout_weight"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutNameLabel"
        android:layout_toEndOf="@+id/weightNameLabel"
        android:layout_weight="1" />

</RelativeLayout>